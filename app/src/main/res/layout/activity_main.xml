            app:layout_row="2" />

        <ImageButton
            android:id="@+id/b11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:onClick="voltear"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/b12"
            android:layout_width="80dp"
